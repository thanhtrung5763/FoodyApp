<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foreground="@drawable/blur_img"
        app:srcCompat="@drawable/respage_1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constrainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imageView8"
        app:layout_constraintStart_toStartOf="@id/imageView8"
        android:paddingHorizontal="8dp"
        android:paddingBottom="8dp"
        android:background="@drawable/respg_info_bg">
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mr. Cookers Restaurant"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/typeRes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fast food"
            android:textSize="13dp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-light"
            app:layout_constraintStart_toStartOf="@id/name"
            app:layout_constraintTop_toBottomOf="@id/name"/>
        <ImageView
            android:id="@+id/circleSize2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/typeRes"
            app:layout_constraintStart_toEndOf="@id/typeRes"
            app:layout_constraintTop_toTopOf="@id/typeRes"
            app:srcCompat="@drawable/ic_baseline_circle_24"/>
        <TextView
            android:id="@+id/Country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Italian"
            android:textSize="13dp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-light"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@id/circleSize2"
            app:layout_constraintTop_toTopOf="@id/typeRes"
            app:layout_constraintBottom_toBottomOf="@id/typeRes"/>
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20-30 mins"
            android:textSize="13dp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-light"
            app:layout_constraintStart_toStartOf="@id/name"
            app:layout_constraintTop_toBottomOf="@id/typeRes"/>
        <ImageView
            android:id="@+id/circleSize3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/time"
            app:layout_constraintStart_toEndOf="@id/time"
            app:layout_constraintTop_toTopOf="@id/time"
            app:srcCompat="@drawable/ic_baseline_circle_24"/>
        <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_baseline_star_24"
        android:text="4.9"
        android:textSize="13dp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-light"
        android:layout_marginStart="4dp"
        android:drawablePadding="3dp"
        app:layout_constraintStart_toEndOf="@id/circleSize3"
        app:layout_constraintTop_toTopOf="@id/time"
        app:layout_constraintBottom_toBottomOf="@id/time"
        app:layout_constraintTop_toBottomOf="@id/typeRes"/>
        <TextView
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(458)"
            android:textSize="13dp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-light"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@id/score"
            app:layout_constraintTop_toTopOf="@id/time"
            app:layout_constraintBottom_toBottomOf="@id/time"
            app:layout_constraintTop_toBottomOf="@id/typeRes"/>
        <ImageView
            android:id="@+id/circleSize4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/time"
            app:layout_constraintStart_toEndOf="@id/rating"
            app:layout_constraintTop_toTopOf="@id/time"
            app:srcCompat="@drawable/ic_baseline_circle_24"/>
        <TextView
            android:id="@+id/deli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Free Delivery"
            android:textSize="13dp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-light"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@id/circleSize4"
            app:layout_constraintTop_toTopOf="@id/time"
            app:layout_constraintBottom_toBottomOf="@id/time"
            app:layout_constraintTop_toBottomOf="@id/typeRes"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/divider"
        style="@style/Divider"
        app:layout_constraintStart_toStartOf="@id/constrainLayout"
        app:layout_constraintTop_toBottomOf="@id/constrainLayout"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constrainLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toStartOf="@id/imageView8"
        android:background="@drawable/respg_info_bg">
        <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restaurant Info"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="sans-serif-light"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="East shewrapara, 905, Mirpur..."
            android:textSize="13dp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-light"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/info"/>
        <TextView
            android:id="@+id/moreinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="More Info"
            android:textSize="16dp"
            android:textColor="#ffde0a"
            android:fontFamily="sans-serif-thin"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/info"
            app:layout_constraintBottom_toBottomOf="@id/address"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
