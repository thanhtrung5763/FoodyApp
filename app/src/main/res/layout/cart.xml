<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Cart"
                android:textSize="28dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:drawableEnd="@drawable/ic_outline_shopping_cart_30"/>
            <View
                android:layout_marginTop="6dp"
                style="@style/Divider"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewCart"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                >
            </androidx.recyclerview.widget.RecyclerView>
            <View
                android:layout_marginHorizontal="16dp"
                style="@style/Divider"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="32dp"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:id="@+id/total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Total(3 Items)"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="18dp"/>
                    <TextView
                        android:id="@+id/totalmoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="45$"
                        android:textSize="18dp"
                        android:textStyle="bold"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="32dp"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/tax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.24"
                        android:gravity="end"
                        android:text="+Taxes"
                        android:textSize="15dp"/>

                    <TextView
                        android:id="@+id/taxmoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight=".76"
                        android:gravity="end"
                        android:text="2.12$" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="32dp"
                    android:layout_marginTop="4dp">

                    <TextView
                    android:id="@+id/deli"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.055"
                    android:gravity="right"
                    android:text="+Delivery Fee"
                    android:textSize="15dp"/>

                    <TextView
                        android:id="@+id/delimoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:gravity="end"
                        android:text="1.00$" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="32dp"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.025"
                        android:gravity="right"
                        android:text="+Discount(25%)"
                        android:textSize="15dp"/>

                    <TextView
                        android:id="@+id/discountmoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.975"
                        android:gravity="end"
                        android:text="6.30$" />
                </LinearLayout>
                <View
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="6dp"
                    style="@style/Divider"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="32dp"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:text="Payable amount"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="18dp"/>

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:gravity="end"
                        android:text="54.42$"
                        android:textSize="18dp"
                        android:textStyle="bold"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Have a promo code?"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="#4ec3fa"/>
                <Button
                    android:elevation="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/orange_bg"
                    android:text="Order Now"
                    android:textSize="16dp"

                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>