<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp">
    <ImageButton
        android:elevation="3dp"
        android:layout_marginStart="6dp"
        android:id="@+id/cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_outline_close_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/circle_white_bg"/>
    <ImageView
        android:id="@+id/imgProduct"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="6dp"
        android:layout_marginVertical="6dp"
        app:layout_constraintTop_toTopOf="@id/cancel_button"
        app:layout_constraintBottom_toBottomOf="@id/cancel_button"
        app:layout_constraintStart_toEndOf="@id/cancel_button"
        android:src="@drawable/kisspng_hamburg_"/>
    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Pigeon Burger"
        android:fontFamily="sans-serif-black"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/imgProduct"
        app:layout_constraintTop_toTopOf="@id/imgProduct"/>
    <TextView
        android:id="@+id/size"
        style="@style/smlStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Size: M"
        app:layout_constraintStart_toStartOf="@id/name"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:layout_marginTop="6dp"
        android:paddingHorizontal="4dp"
        android:elevation="10dp" />



    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:fontFamily="sans-serif-thin"
        android:text="$12,99"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@id/size"
        app:layout_constraintTop_toBottomOf="@id/size"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/quantity_bg"
        android:padding="9dp"
        app:layout_constraintTop_toTopOf="@id/name"
        app:layout_constraintBottom_toBottomOf="@id/imgProduct"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageButton
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:elevation="2dp"
            android:src="@drawable/ic_baseline_remove_16"
            android:background="@drawable/circle_white_bg"
            app:layout_constraintBottom_toBottomOf="@id/sizeL"
            app:layout_constraintStart_toEndOf="@id/sizeL"
            app:layout_constraintTop_toTopOf="@id/sizeL" />
        <TextView
            android:id="@+id/qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="15dp"
            style="@style/smlStyleFoodDetails"
            android:textAlignment="center"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>
        <ImageButton
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:elevation="2dp"
            android:src="@drawable/ic_baseline_add_16"
            android:background="@drawable/circle_white_bg"
            app:layout_constraintBottom_toBottomOf="@id/sizeS"
            app:layout_constraintStart_toEndOf="@id/sizeS"
            app:layout_constraintTop_toTopOf="@id/sizeS" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>