<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="16dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/pic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/burger_1"
        android:layout_marginTop="16dp"
        app:shapeAppearanceOverlay="@style/roundImageViewProfile"/>
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jack Sparrow"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintStart_toEndOf="@id/pic"
        app:layout_constraintTop_toTopOf="@id/pic"
        android:textStyle="bold"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-black"/>
    <TextView
        android:id="@+id/mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="jack.spa@gmail.com"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintStart_toStartOf="@id/name"/>
    <ImageView
        android:id="@+id/editProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/name"
        app:layout_constraintBottom_toBottomOf="@id/mail"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="2dp"
        android:src="@drawable/ic_baseline_manage_accounts_24"
        android:background="@drawable/circle_white_bg"
        android:elevation="2dp"/>
    <ImageView
        android:id="@+id/picCovid"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/pic"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/covid_banner"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constrainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/picCovid"
        app:layout_constraintStart_toStartOf="@id/picCovid"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp">
        <ImageView
            android:id="@+id/noti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="16dp"
            android:padding="4dp"
            android:src="@drawable/ic_baseline_notifications_24"
            android:background="@drawable/noti_bg"/>
        <TextView
            android:id="@+id/tvnoti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notifications"
            app:layout_constraintTop_toTopOf="@id/noti"
            app:layout_constraintStart_toEndOf="@id/noti"
            app:layout_constraintBottom_toBottomOf="@id/noti"
            android:layout_marginStart="12dp"
            android:textSize="16dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/noti"
            app:layout_constraintBottom_toBottomOf="@id/noti"
            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constrainLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/constrainLayout"
        app:layout_constraintStart_toStartOf="@id/picCovid"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp">
        <ImageView
            android:id="@+id/payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="16dp"
            android:padding="4dp"
            android:src="@drawable/ic_baseline_payment_24"
            android:background="@drawable/payment_bg"/>
        <TextView
            android:id="@+id/tvpayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payments"
            app:layout_constraintTop_toTopOf="@id/payment"
            app:layout_constraintStart_toEndOf="@id/payment"
            app:layout_constraintBottom_toBottomOf="@id/payment"
            android:layout_marginStart="12dp"
            android:textSize="16dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/payment"
            app:layout_constraintBottom_toBottomOf="@id/payment"
            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constrainLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/constrainLayout2"
        app:layout_constraintStart_toStartOf="@id/picCovid"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp">
        <ImageView
            android:id="@+id/promo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="16dp"
            android:padding="4dp"
            android:src="@drawable/ic_baseline_local_offer_24"
            android:background="@drawable/promotion_bg"/>
        <TextView
            android:id="@+id/tvpromo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Promotions"
            app:layout_constraintTop_toTopOf="@id/promo"
            app:layout_constraintStart_toEndOf="@id/promo"
            app:layout_constraintBottom_toBottomOf="@id/promo"
            android:layout_marginStart="12dp"
            android:textSize="16dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/promo"
            app:layout_constraintBottom_toBottomOf="@id/promo"
            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constrainLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/constrainLayout3"
        app:layout_constraintStart_toStartOf="@id/picCovid"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp">
        <ImageView
            android:id="@+id/help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="16dp"
            android:padding="4dp"
            android:src="@drawable/ic_baseline_support_24"
            android:background="@drawable/help_bg"/>
        <TextView
            android:id="@+id/tvhelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Help"
            app:layout_constraintTop_toTopOf="@id/help"
            app:layout_constraintStart_toEndOf="@id/help"
            app:layout_constraintBottom_toBottomOf="@id/help"
            android:layout_marginStart="12dp"
            android:textSize="16dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/help"
            app:layout_constraintBottom_toBottomOf="@id/help"
            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constrainLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/constrainLayout4"
        app:layout_constraintStart_toStartOf="@id/picCovid"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp">
        <ImageView
            android:id="@+id/feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="16dp"
            android:padding="4dp"
            android:src="@drawable/ic_baseline_feedback_24"
            android:background="@drawable/feedback_bg"/>
        <TextView
            android:id="@+id/tvfeedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feedback"
            app:layout_constraintTop_toTopOf="@id/feedback"
            app:layout_constraintStart_toEndOf="@id/feedback"
            app:layout_constraintBottom_toBottomOf="@id/feedback"
            android:layout_marginStart="12dp"
            android:textSize="16dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/feedback"
            app:layout_constraintBottom_toBottomOf="@id/feedback"
            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constrainLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/constrainLayout5"
        app:layout_constraintStart_toStartOf="@id/picCovid"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp">
        <ImageView
            android:id="@+id/about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="16dp"
            android:padding="4dp"
            android:src="@drawable/ic_baseline_about_us_24"
            android:background="@drawable/about_us_bg"/>
        <TextView
            android:id="@+id/tvabout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Us"
            app:layout_constraintTop_toTopOf="@id/about"
            app:layout_constraintStart_toEndOf="@id/about"
            app:layout_constraintBottom_toBottomOf="@id/about"
            android:layout_marginStart="12dp"
            android:textSize="16dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/about"
            app:layout_constraintBottom_toBottomOf="@id/about"
            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constrainLayout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/constrainLayout6"
        app:layout_constraintStart_toStartOf="@id/picCovid"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp">
        <ImageView
            android:id="@+id/setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="16dp"
            android:padding="4dp"
            android:src="@drawable/ic_baseline_settings_24"
            android:background="@drawable/setting_bg"/>
        <TextView
            android:id="@+id/tvsetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            app:layout_constraintTop_toTopOf="@id/setting"
            app:layout_constraintStart_toEndOf="@id/setting"
            app:layout_constraintBottom_toBottomOf="@id/setting"
            android:layout_marginStart="12dp"
            android:textSize="16dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/setting"
            app:layout_constraintBottom_toBottomOf="@id/setting"
            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>