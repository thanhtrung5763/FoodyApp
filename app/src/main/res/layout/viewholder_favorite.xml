<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/food_respage_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:paddingHorizontal="8dp"
    android:paddingVertical="4dp"
    android:elevation="6dp"
    >
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/food_respage_pic"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/burger_1"
        app:shapeAppearanceOverlay="@style/roundImageView"/>
    <TextView
        android:id="@+id/prod_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Beef Burger"
        android:fontFamily="sans-serif-black"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toStartOf="@id/addtocartbtn"
        android:layout_marginEnd="2dp"
        app:layout_constraintStart_toEndOf="@id/food_respage_pic"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/res_name"
        style="@style/smlStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Restaurant: Botanica Giảng Võ"
        app:layout_constraintStart_toStartOf="@id/prod_name"
        app:layout_constraintTop_toBottomOf="@id/prod_name"
        app:layout_constraintBottom_toTopOf="@id/score"
        app:layout_constraintEnd_toEndOf="@id/prod_name"
        android:layout_marginTop="6dp"
        android:elevation="10dp" />
    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.8"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@id/res_name"
        app:layout_constraintBottom_toTopOf="@id/price"
        app:layout_constraintTop_toBottomOf="@id/res_name"
        android:drawableStart="@drawable/ic_baseline_star_24"/>
    <TextView
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(233 ratings)"
        android:textSize="12sp"
        android:textColor="#bbbbbb"
        android:fontFamily="sans-serif-light"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@id/score"
        app:layout_constraintTop_toTopOf="@id/score"/>
    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="sans-serif-thin"
        android:text="$12,99"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@id/res_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/score"
        android:textStyle="bold"/>
    <ImageButton
        android:id="@+id/favorite_btn"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:src="@drawable/ic_baseline_favorite_24"
        android:background="@drawable/circle_white_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/food_respage_pic"/>
    <ImageButton
        android:id="@+id/addtocartbtn"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@drawable/ic_baseline_add_24"
        android:background="@drawable/orange_bg"
        app:layout_constraintBottom_toBottomOf="@id/food_respage_pic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/food_respage_pic" />
</androidx.constraintlayout.widget.ConstraintLayout>